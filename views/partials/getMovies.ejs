<% movies.map(movie=> { %>
    <div id="<%= movie.id %>" class="movie grid grid-row-3 place-items-center text-center w-[100%] p-8">
        <img class="<% if (showIntro){ %> max-w-[500px] <%}%>min-w-60 px-8 object-cover" src="<%= movie.attributes.image.url %>" alt="<%= movie.attributes.title %>">
        <h2 class="movie-title sm:text-lg lg:text-xl xl:text-4xl font-bold text-white my-4">

            <div class="flex items-center justify-center">
                <svg class="w-4 h-4 text-yellow-300" aria-label="Star" xmlns="http://www.w3.org/2000/svg"
                    fill="currentColor" viewBox="0 0 22 20">
                    <path
                        d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
                </svg>
             <p class="rating ms-2 text-sm font-bold text-white-900 dark:text-white"></p>
            </div>

                      <%= movie.attributes.title %>
        </h2>
        <% if (showIntro) { %>
            <p class="text-2xl text-white w-2/3 py-4">
                <%= movie.attributes.intro %>
            </p>
            <% } %>
            <% if (showScreenings){  %>
        <div id="screenings__title" class="text-2xl font-semibold text-white w-2/3 py-4"></div>
        <div id="screenings__content" class="text-xl text-white w-2/3 py-4 list-none list-inside"></div>
            <% } %>
                <a class="px-4 py-2 mt-4 text-2xl font-bold text-white bg-secondary rounded hover:bg-secondary-hover"
                    href="<%= href + movie.id %>">
                    <%= hrefText %>
                </a>

                <% if (showReviews) {%>
                    <div id="reviews"
                        class="flex flex-col justify-between rounded-xl max-w-3xl w-9/12 min-h-[540px] bg-secondary my-10">
                        <h2 class="text-primary text-3xl pt-3 font-bold">Recensioner</h2>
                        <ul id="reviews__list" class="reviewsListHeight flex flex-col align-start gap-1 p-3 mb-3">
                        </ul>
                        <div class="grid grid-cols-2 pb-3">
                            <button id="reviews__next"
                                class="col-start-2 col-end-3 row-span-1 justify-self-center self-center px-4 py-2 mx-3 text-xl w-36 font-bold text-white bg-primary rounded ">Nästa
                                sida</button>
                            <button id="reviews__prev"
                                class="col-start-1 col-end-2 row-start-1 justify-self-center self-center px-4 py-2 mx-3  text-xl w-36 font-bold text-white bg-primary rounded ">Bakåt</button>
                        </div>
                    </div>
                    <% } %>
    </div>
    <% }) %>